<div class="container text-center">
  <h3>Морской бой</h3><br>
  <div class="row">
    <div class="col-sm-4">
      <p>Ваши корабли</p>
      <table class="table-bordered text-center table-1" >

        <% 1.upto(@player_one.field_size) do |x_axis| %>
          <tr>
            <% 1.upto(@player_one.field_size) do |y_axis| %>
              <% if @player_one.cell(x_axis, y_axis).status == 'x' %>
                <td bgcolor="blue">
              <% else %>
                <td>
              <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>

      </table>

    </div>
    <div class="col-sm-4">
      <p>Поле противника</p>
      <table class="table-bordered text-center table-1" >
        <% 1.upto(@player_two.field_size) do |x_axis| %>
          <tr>
            <% 1.upto(@player_two.field_size) do |y_axis| %>
              <% if @player_two.cell(x_axis, y_axis).status == 'x' %>
                <td bgcolor="blue">
              <% else %>
                <td>
              <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-sm-4">
      <ul class="list-group">
        <li class="list-group-item"><%= button_to 'Расставить корабли автоматически', {action: 'create'}, {class: 'btn-info btn-xs'} %></li>
        <li class="list-group-item">Расставить корабли вручную</li>
        <li class="list-group-item">Играть</li>
        <li class="list-group-item">Сдаться</li>
      </ul>
    </div>
  </div>
</div><br>

